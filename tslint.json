{
  "extends": [
    "tslint:all"
  ],
  "rulesDirectory": [
    "node_modules/@nrwl/schematics/src/tslint",
    "node_modules/codelyzer"
  ],
  "rules": {
    "comment-format": { "options": ["check-space"] },
    "completed-docs": [
      true,
      {
        "enums": true,
        "functions": {
          "visibilities": "exported"
        },
        "methods": {
          "locations": "instance",
          "privacies": ["public", "protected"]
        }
      }
    ],
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": [true, "never-prefix"],
    "no-import-side-effect": [true, {
      "ignore-module": "^(zone\\.js)"
    }
    ],
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "no-switch-case-fall-through": true,
    "no-submodule-imports": [true, "@angular/platform-browser", "@angular/core/testing", "rxjs", "zone.js"],
    "quotemark": [true, "single", "jsx-double"],
    "trailing-comma": {
      "options": {
        "esSpecCompliant": true,
        "multiline": "never",
        "singleline": "never"
      }
    },

    "nx-enforce-module-boundaries": [
      true,
      {
        "allow": [],
        "depConstraints": [
          {
            "sourceTag": "*",
            "onlyDependOnLibsWithTags": ["*"]
          }
        ]
      }
    ],
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "component-selector": [true, "element", "app", "kebab-case"],
    "no-output-on-prefix": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true
  }
}
